% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=uscRed,bg=gray1}
\setbeamercolor{palette secondary}{fg=uscRed,bg=gray1}
\setbeamercolor{palette tertiary}{fg=uscRed,bg=gray1}
\setbeamercolor{palette quaternary}{fg=uscRed,bg=gray1}
\setbeamercolor{structure}{fg=uscRed}

% Headline
\setbeamercolor{headline}{fg=white,bg=uscRed}

% Block
\setbeamercolor{block title}{fg=uscRed,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=uscRed,bg=lightred}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=lightred}

% Example Block
\setbeamercolor{block example title}{fg=black,bg=gray1}
\setbeamercolor{block example separator}{bg=gray1}
\setbeamercolor{block example body}{fg=black,bg=lightgray}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=camblue}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
